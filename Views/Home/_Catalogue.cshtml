@using Video_Catalogue.Models
@model List<VideoDetailModel>

@if (Model != null && Model.Any())
{
    <div class="text-center alert-info">
        <p>Select a video from the table to start playback.</p>
    </div>
    
    <video id="videoPlayer" width="100%" height="560" controls class="mt-3">
        <source id="videoSource" src="" type="video/mp4" />
        Your browser does not support the video tag.
    </video>

    <table class="table" style="border: black; border-width:2;">
        <thead>
            <tr>
                <th>Name</th>
                <th>Size (KB)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var video in Model)
            {
            <tr onclick="playVideo('@video.FilePath')" style="cursor: pointer;">
                <td>@video.FileName</td>
                <td>@(video.FileSize / 1024)</td>
            </tr>
            }
        </tbody>
    </table>
    
}
else
{
    <div class="text-center alert-info">
        <p>The catalogue is empty. Please use the Upload form to add videos.</p>
    </div>
}





